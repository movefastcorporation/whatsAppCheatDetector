  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://chilldetector.com/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "protocol_handlers": [
    {
      "protocol": "web+chilldetector",
      "url": "/analyze?chat=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/analyze",
      "accept": {
        "text/plain": [".txt"]
      },
      "launch_type": "single-client"
    }
  ]
}