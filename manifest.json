{
  "name": "ChillDetector - Detector de Infieles WhatsApp",
  "short_name": "ChillDetector",
  "description": "Detecta patrones sospechosos en conversaciones de WhatsApp usando inteligencia artificial avanzada",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#25d366",
  "orientation": "portrait-primary",
